unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, IdBaseComponent,
  IdComponent, IdTCPConnection, IdTCPClient, IdHTTP, Vcl.OleCtrls, SHDocVw;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Button1: TButton;
    Dolar: TEdit;
    Real: TEdit;
    dolaratual: TEdit;
    Label3: TLabel;
    IdHTTP1: TIdHTTP;
    compra: TButton;
    msg: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure compraClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  varreal : real;
  vardolar : real;
  vardolarat : real;
  varnome : string;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
  if (dolar.Text = '') or (dolaratual.Text = '') then
  begin
    ShowMessage('Valor inválido');
  end
  else
  begin
    compra.Enabled := true;
    vardolarat := strtofloat(dolaratual.Text);
    vardolar := strtofloat(dolar.Text);
    varreal := strtofloat(dolar.Text) * vardolarat;
    real.Text := floattostr(varreal);
  end;


end;


procedure TForm1.compraClick(Sender: TObject);
begin
  varnome := inputbox('Nome','Escreva seu nome','');
  if (varnome = '') or (dolar.Text = '0') then
  begin
    ShowMessage('Nome ou valor < 1');
  end
  else
  begin
    msg.Caption := 'Parabéns ' + varnome + ', você acaba de comprar $' + dolar.Text;
  end;
end;


end.
